<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >
	
    <LinearLayout 
	    android:id="@+id/remote_top"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
	    android:background="#ff333333"
	    >
	    <TextView 
	        android:id="@+id/top_text"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:text="设置"
	        android:textSize="30sp"
	        />
	</LinearLayout>
    <ScrollView
        android:id="@+id/ScrollView01"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/remote_top" >

        <LinearLayout
            android:id="@+id/LinearLayout01"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp" >

            <!-- <TextView
                android:id="@+id/TextView00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/txt_preferences"
                android:textColor="#FFF"
                android:textSize="20dp" >
            </TextView> -->

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="轻击"
                android:textColor="#FFF"
                android:textSize="16dp" >
            </TextView>

            <CheckBox
                android:id="@+id/cbTap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:focusable="true"
                android:text="启用"
                android:textSize="16dp" >
            </CheckBox>

            <TextView
                android:id="@+id/TextView06"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="两个手指点击"
                android:textColor="#FFF"
                android:textSize="16dp" >
            </TextView>

            <CheckBox
                android:id="@+id/cbTwoTouch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:focusable="true"
                android:text="启用"
                android:textSize="16dp" >
            </CheckBox>

            <TextView
                android:id="@+id/TextView07"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="屏幕上的鼠标按钮"
                android:textColor="#FFF"
                android:textSize="16dp" >
            </TextView>

            <CheckBox
                android:id="@+id/cbShowButtons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:focusable="true"
                android:text="启用"
                android:textSize="16dp" >
            </CheckBox>

            <TextView
                android:id="@+id/TextView02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="速度条"
                android:textColor="#FFF"
                android:textSize="16dp" >
            </TextView>

            <SeekBar
                android:id="@+id/sbClick"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fadingEdge="horizontal"
                android:focusable="true"
                android:max="1000"
                android:visibility="visible" >
            </SeekBar>

            <TextView
                android:id="@+id/TextView03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="鼠标灵敏度"
                android:textColor="#FFF"
                android:textSize="16dp" >
            </TextView>

            <SeekBar
                android:id="@+id/sbSensitivity"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fadingEdge="horizontal"
                android:focusable="true"
                android:max="100"
                android:visibility="visible" >
            </SeekBar>

            <TextView
                android:id="@+id/TextView04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="滚动灵敏度"
                android:textColor="#FFF"
                android:textSize="16dp" >
            </TextView>

            <SeekBar
                android:id="@+id/sbScrollSensitivity"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fadingEdge="horizontal"
                android:focusable="true"
                android:max="100"
                android:visibility="visible" >
            </SeekBar>

            <TextView
                android:id="@+id/TextView05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="逆方向滚动"
                android:textColor="#FFF"
                android:textSize="16dp" >
            </TextView>

            <CheckBox
                android:id="@+id/cbScrollInverted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:focusable="true"
                android:text="启用"
                android:textSize="16dp" >
            </CheckBox>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>